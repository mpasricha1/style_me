
  <div class="header">
      <img src='https://res-1.cloudinary.com/crunchbase-production/image/upload/c_lpad,h_256,w_256,f_auto,q_auto:eco/ur6mjtwp5kdtntnxvxtp' class="img">
      <h2>BUILD OUTFITs</h2>
  </div>

<div class="container">
     
    <label for='category'>Choose a Category</label>
        <select name='category' id='category_name'>
            {{#each categories}}
            <option id=“{{id}}” value=“{{category_name}}“>{{category_name}}</option>
            {{/each}}
        </select>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <span class="algolia-autocomplete" style="position: relative; display: inline-block; direction: ltr"></span>
            <input type="search" class="form-control ds-input" id="search-input" placeholder="Search Outfits"
                style="position: relative; vertical-align: top" />

            <!--side pictures of building outfits page-->
        {{#if newOutfititems}}
         {{#each newOutfititems }}
            {{> clothesCard}}
         {{/each}}
         {{else}}
            <div> Sorry no outfits items found</div>
        {{/if}}
        </div>

        <!--Drag items-->
        
        <div class="col-sm-4">
             
            <div id="DragImg" style="
              max-width: max-content;
              margin-bottom: 20%;
              margin-top: 20%;
              margin-left: 20%;
            ">
                <span class="algolia-autocomplete"
                    style="position: relative; display: inline-block; direction: ltr"></span>
                <input type="search" class="form-control ds-input" placeholder="Drag Outfits Here"
                    style="position: relative; vertical-align: top" />
            </div>
        </div>
        <div class="col-sm-4">
        <form id="addItem">
            <!--search buttons for catalog name and outfits followed by save button-->
            <span class="algolia-autocomplete" style="position: relative; display: inline-block; direction: ltr"></span>
            <input type="search" class="form-control ds-input" id="catalog-input" placeholder="Catalog Name"
                style="position: relative; vertical-align: top" />

            <span class="algolia-autocomplete" style="position: relative; display: inline-block; direction: ltr"></span>
            <input type="search" class="form-control ds-input" id="outfit-input" placeholder="Outfit Name"
                style="position: relative; vertical-align: top" />

            <button class="btn btn-primary" type="submit" style="margin-top: 20px">
                Save Outfit
            </button>
        </div>
    </div>
</div>
<link rel="stylesheet" href="../public/assets/css/buildOutfit.css">