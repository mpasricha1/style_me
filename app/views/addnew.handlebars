<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Style Me</h1>
    <p>Click the button to upload an existing photo or add a new one!</p>

    <!-- Cloudinary button for uploading or adding a new photo -->
    <button id="upload_widget" class="cloudinary-button">Upload or Add</button>

    <h2>Details</h2>
    <!-- Photo should be displayed in img tag -->
    <img
      src=""
      style="width: 200px; height: 200px; border: solid; margin-bottom: 20px"
    />
    <!-- Photo input fields -->
    <div>
      <label for="item_name">Item Name</label>

      <input
        id="item_name"
        type="text"
        name="item_Name"
        placeholder="Item name"
      />
      <br />
      <label for="catalog_name">Catalog Name</label>

      <input
        id="catalog_name"
        type="text"
        name="catalog"
        placeholder="Catalog name"
      />
      <br />
      <label for="category">Category Name</label>

      <input
        id="category_name"
        type="text"
        name="category"
        placeholder="Category Name"
      />
    </div>

    <!-- Add to collection button -->
    <div>
      <button
        id="addToCollection_Btn"
        class="cloudinary-button"
        type="submit"
        style="margin-top: 10px"
      >
        Add to Collection
      </button>
    </div>

    <!-- Cloudinary script -->
    <script
      src="https://widget.cloudinary.com/v2.0/global/all.js"
      type="text/javascript"
    ></script>
    <script type="text/javascript">
      var myWidget = cloudinary.createUploadWidget(
        {
          cloudName: "dnx8v0ryu",
          uploadPreset: "qvqp5qcx",
        },
        (error, result) => {
          if (!error && result && result.event === "success") {
            console.log("Done! Here is the image info: ", result.info);
          }
        }
      );
      document.getElementById("upload_widget").addEventListener(
        "click",
        function () {
          myWidget.open();
        },
        false
      );
    </script>
  </body>
</html>
